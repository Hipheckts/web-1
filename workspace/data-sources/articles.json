{
	"datasource": {
		"key": "articles",
		"name": "Articles DS",
		"source": {
			"host": "localhost",
			"port": "3000",
			"endpoint": "editorial/articles"
		},
		"cache": false,

		"paginate": true,

		"filters": [
			{ "category": ["blog"] }
		],

		"count": 5,
		"sort": {
			"field": "_id",
			"order": "desc"
		},
		"search": {"title": "/(third)/iu"},
		"fields": ["title", "author"]
	}
}
