{
	"datasource": {
		"key": "books",
		"name": "Books DS",
		"source": {
			"type": "remote",
			"protocol": "https",
			"host": "localhost",
			"port": "3000",
			"endpoint": "vjoin/testdb/books"
		},
    "caching": {
        "enabled": true,
        "ttl": 300,
        "directory": "./cache/rosecomb/",
        "extension": "json"
    },
    "auth": {
        "type": "bearer",
        "host": "localhost",
        "port": "3000",
        "tokenUrl": "/token",
        "credentials": {
            "clientId": "test123",
            "secret": "superSecret"
        }
    },
		"paginate": true,
		"count": 5,
		"sort": {
			"field": "_id",
			"order": "desc"
		},
		"search": {},
		"fields": ["name","authorId"]
	}
}
