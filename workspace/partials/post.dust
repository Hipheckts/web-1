<article>
	<time datetime="{attributes.date}">
		{@formatDate 
			data=attributes.date 
			parseFormat="YYYY-DD-MMMTh:mm:ss.ZZ" 
			format="Do MMMM YYYY" 
		/}
	</time>

	<div class="content">
		<header>
			<h2><a href="/post/{attributes.handle}">{attributes.title}</a></h2>
			<p class="author">By {attributes.author}</p>
		</header>

		{@markdown}{contentText|s}{/markdown}
	</div>
</article>