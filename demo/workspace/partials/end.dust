<script>
	var rowheight = 12;
	var w = 4;
	var c = document.createElement('canvas');
	c.width = w;
	c.height = rowheight;
	var x = c.getContext('2d');
	x.strokeStyle = 'rgba(168,168,168,0.4)';
	x.beginPath();
	x.moveTo(0, rowheight);
	x.lineTo(w-1, rowheight);
	x.stroke();
	x.closePath();
	// document.documentElement.style.backgroundImage = 'url(' + c.toDataURL('png') + ')';
</script>

</body>
</html>
